<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Institutional gpa</th>
      <th>Institutional credits</th>
      <th>Total earned credits</th>
      <th>Total attempted credits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.institutional_gpa %></td>
        <td><%= student.institutional_credits %></td>
        <td><%= student.total_earned_credits %></td>
        <td><%= student.total_attempted_credits %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

